    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="viewModel"
            type="com.aljon.purrito.ui.favorite.FavoritesViewModel" />
    </data>

    <androidx.recyclerview.widget.RecyclerView
